{{#if addNewQuestion}}
     <h2>Generate a new Question</h2>
     <div class="container">
       <form>
         <div class="form-group">
           <label for="submit">Submit your question:</label>
           {{input value=submit id="submit"}}
         </div>

         <div class="form-group">
           <label for="author">Your Name:</label>
           {{input value=author id="author"}}
         </div>

         <div class="form-group">
           <label for="notes">Additional notes:</label>
           {{input value=notes id="notes"}}
         </div>
         <button class="save-question" {{action 'save1'}}>Save Question</button>
       </form>

     </div>
 {{else}}
    <button {{action 'questionFormShow'}}>New question</button>
{{/if}}
