{{#if updateQuestionForm}}
     <h2>Update {{question.author}}'s Question</h2>
     <div class="container">
       <form>
         <div class="form-group">
           <label for="submit">Submit your question:</label>
           {{input value=submit id="submit" placeholder=question.submit}}
         </div>

         <div class="form-group">
           <label for="author">Your Name:</label>
           {{input value=author id="author" placeholder=question.author}}
         </div>

         <div class="form-group">
           <label for="notes">Additional notes:</label>
           {{input value=notes id="notes" placeholder=question.notes}}
         </div>
         <button class="update-question" {{action 'update' question}}>Save Changes</button>
       </form>

     </div>
 {{else}}
    <button class="updateQuestion-button" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
